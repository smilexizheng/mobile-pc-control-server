{
  "name": "control-server",
  "version": "2.5.2",
  "description": "ControlServer",
  "main": "./out/main/index.js",
  "author": "smilexizheng",
  "private": "true",
  "homepage": "https://github.com/smilexizheng/mobile-pc-control-server",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "chcp 65001 && electron-vite dev  --  --trace-warnings ",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --x64 --arm64",
    "build:win:x64": "npm run build && electron-builder --win --x64",
    "build:win:arm64": "npm run build && electron-builder --win --arm64",
    "build:mac": "npm run build && electron-builder --mac --arm64 --x64",
    "build:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "build:mac:x64": "npm run build && electron-builder --mac --x64",
    "build:linux": "npm run build && electron-builder --linux --x64 --arm64",
    "build:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "build:linux:x64": "npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "electron-log": "^5.4.3",
    "electron-screenshots": "^0.5.27",
    "loudness": "^0.4.2",
    "node-schedule": "^2.1.1",
    "node-screenshots": "^0.2.5",
    "screenshot-desktop": "^1.15.1",
    "sharp": "^0.34.1",
    "sherpa-onnx": "^1.11.3"
  },
  "devDependencies": {
    "@arco-design/web-vue": "^2.57.0",
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@nutui/auto-import-resolver": "^1.0.0",
    "@nutui/icons-vue": "^0.1.1",
    "@nutui/nutui": "^4.3.13",
    "@types/express": "^5.0.1",
    "@types/node": "^22.19.1",
    "@types/node-schedule": "^2.1.7",
    "@types/socket.io-client": "^1.4.36",
    "@vitejs/plugin-vue": "^6.0.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.1.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "flv.js": "^1.6.2",
    "less": "^4.2.2",
    "mic": "^2.1.2",
    "naudiodon2": "^2.4.0",
    "pinia": "^3.0.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "unplugin-vue-components": "^28.4.1",
    "uuid": "^13.0.0",
    "vite": "npm:rolldown-vite@7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue": "^3.5.25",
    "vue-eslint-parser": "^10.2.0",
    "vue-router": "^4.5.0",
    "vue-tsc": "^3.1.6",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "systeminformation": "^5.25.11",
    "tinykeys": "^3.0.0",
    "ua-parser-js": "^2.0.3",
    "upath": "^2.0.1",
    "vue-konva": "^3.2.1",
    "@vueuse/core": "^13.1.0",
    "animate.css": "^4.1.1",
    "dayjs": "^1.11.13",
    "iconv-lite": "^0.6.3",
    "konva": "^9.3.20",
    "express": "5.1.0",
    "electron-updater": "^6.3.9",
    "lucide-vue-next": "^0.537.0",
